# Production Environment Configuration
# Copy to .env and change all values before use

# Database (SQLite local - file stored in ./data/)
DATABASE_URL=sqlite:///data/coffee.db

# API Authentication (CRITICAL: Change this!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=CHANGE_THIS_TO_SECURE_RANDOM_KEY

# Docker Image
DOCKER_IMAGE=ghcr.io/dny1020/coffee-tracker:latest

# Application
FASTAPI_ENV=production
DEBUG=false
LOG_LEVEL=info
TZ=UTC

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000
SECURITY_HEADERS=true
