# Production Environment Configuration
# Copy to .env and change all values before use

# Database
POSTGRES_USER=coffee
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=coffee_db
DATABASE_URL=postgresql+psycopg2://coffee:CHANGE_THIS_PASSWORD@postgres:5432/coffee_db

# API Authentication (CRITICAL: Change this!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=CHANGE_THIS_TO_SECURE_RANDOM_KEY

# Docker Image
DOCKER_IMAGE=ghcr.io/dny1020/coffee-tracker:latest

# Application
FASTAPI_ENV=production
DEBUG=false
LOG_LEVEL=info
TZ=UTC

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,coffee.danilocloud.me
CORS_ORIGINS=https://danilocloud.me
SECURITY_HEADERS=true

