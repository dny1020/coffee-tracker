# Database (switch to PostgreSQL container by default; keep SQLite fallback commented)
# For PostgreSQL (docker-compose service 'postgres')
POSTGRES_USER=coffee
POSTGRES_PASSWORD=coffee_password
POSTGRES_DB=coffee_db
DATABASE_URL=postgresql+psycopg2://coffee:coffee_password@postgres:5432/coffee_db

# For SQLite fallback (uncomment to use instead of Postgres)
# DATABASE_URL=sqlite:///data/coffee.db

# FastAPI
FASTAPI_ENV=production
DEBUG=false

# Application
APP_NAME="Coffee Tracker"
APP_VERSION="1.0.0"

# Server
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=info

# Authentication - CHANGE THIS IN PRODUCTION
API_KEY=coffee-addict-secret-key-2025

# Rate Limiting (Redis)
REDIS_URL=redis://localhost:6379/0

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
METRICS_PUBLIC=false
MAX_REQUEST_BODY_BYTES=1048576

# Optional: Enable extra security headers (true/false)
SECURITY_HEADERS=true

# Optional: Timezone for logs (defaults to UTC)
TZ=UTC

# Business Logic Configuration (Optional - defaults shown)
MAX_CAFFEINE_MG=1000
RECOMMENDED_DAILY_CAFFEINE_MG=400
MIN_HEART_RATE_BPM=30
MAX_HEART_RATE_BPM=250